# Maintained by Chef.  Local changes will be overwritten

[Unit]
Description=Dante Socks5 Daemon
ConditionPathExists=<%= node['dante_ng']['config_path'] %>
ConditionPathExists=!/var/run/sockd.pid

[Service]
ExecStart=<%= node['dante_ng']['path'] %>/sbin/sockd -D -f <%= node['dante_ng']['config_path'] %>
ExecReload=/bin/kill -HUP $MAINPID
PIDFile=/var/run/sockd.pid
KillMode=process
Restart=on-failure

[Install]
WantedBy=multi-user.target
Alias=sockd.service
